<div class="container" style="margin-top:2rem;">
  <h3>List of Doctors</h3>

  <table class="table table-hover doc-list">
    <tr>
      <th>Name</th>
      <th>Speciality</th>
      <th>Detail</th>
      <th></th>
    </tr>

    <% @doctors.each do |doc| %>
      <tr>
        <td><%= doc.name %></td>
        <td><%= doc.category %></td>
        <td><%= link_to 'Show', doctor_path(doc) %></td>
        <td><%= link_to 'Make a appointment', new_appointment_path(doc), :class=>'appointment-btn' %></td>
      </tr>
    <% end %>
  </table>
</div>
