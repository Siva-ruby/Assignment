<%= form_with model: @doctor, local: true do |f| %>
  <div class="inp-field">
    <label for="name">Name</label>
    <%= f.text_field :name, :class=>'input-focus', placeholder:'Name' %>
  </div>

  <div class="inp-field">
    <label for="category">Category</label>
    <%= f.select :category, options_for_select([["Select One", ""], "Cell", "Work", "Office", "Home", "Other"]), :class=>'input-focus' %>
  </div>

  <div class="inp-field">
    <label for="phono_no">Phone Number</label>
    <%= f.text_field :phone_no, :class=>'input-focus', placeholder:'Phone Number' %>
  </div>

  <div class="inp-field">
    <label for="email">Email</label>
    <%= f.email_field :email, :class=>'input-focus', placeholder:'Email' %>
  </div>

  <%= f.submit 'Create' %>
<% end %>
