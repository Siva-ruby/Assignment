<div class="container" style="margin-top:2rem;">
  <div class="row my-5">
    <div class="col-md-6">
      <%= link_to "New Doctor", new_doctor_path, class: "submit-btn" %>
    </div>
  </div>

  <h3>Listing Articles</h3>

  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Speciality</th>
      <th>Contact Number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>

    <% @doctors.each do |doc| %>
      <tr>
        <td><%= doc.name %></td>
        <td><%= doc.category %></td>
        <td><%= doc.phone_no %></td>
        <td><%= doc.email %></td>
        <td><%= link_to 'Show', doctor_path(doc) %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doc) %></td>
        <td><%= link_to 'Destroy', doctor_path(doc), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
